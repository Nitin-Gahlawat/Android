<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="MainViewModel" type="com.example.callmethodapihit.ui.mainActivity.MainViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mainActivity.MainActivity"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{MainViewModel.title}"
            android:gravity="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{MainViewModel.price}"
            android:gravity="center" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetData"
            android:gravity="center" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/newMove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DisplayRview"
            android:gravity="center" />
    </LinearLayout>
</layout>